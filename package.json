{
    "name": "mi-proyecto",
    "version": "1.0.0",
    "scripts": {
      "dev": "concurrently \"npm:start:server\" \"npm:start:client\"",
      "start:client": "vite --config vite.config.ts",
      "build:client": "vite build --config vite.config.ts",
      "start:server": "ts-node-dev --respawn src/server/server.ts",
      "build": "npm run build:client && tsc",
      "start": "node dist/server.js"
    },
    "dependencies": {
      "express": "^4.18.2",
      "prisma": "^4.x",
      "bcrypt": "^5.x",
      "jsonwebtoken": "^9.x"
    },
    "devDependencies": {
      "typescript": "^5.x",
      "ts-node-dev": "^2.x",
      "vite": "^4.x",
      "react": "^18.x",
      "react-dom": "^18.x",
      "@vitejs/plugin-react": "^4.x"
    }
  }
  